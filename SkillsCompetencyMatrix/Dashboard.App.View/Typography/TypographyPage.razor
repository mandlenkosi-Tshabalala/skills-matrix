@page "/typography"

<div class="typography-root">
    <Grid
        Container
        Spacing="@Spacing.Four">
        @foreach(var entry in VariantMappings)
        {
            <Grid
                Item
                Small="@GridSize.Three"
                ExtraSmall="@GridSize.Twelve">
                <Typography Variant="@TypographyVariant.Caption">@entry.Key</Typography>
            </Grid>
            <Grid
                Item
                Small="@GridSize.Nine"
                ExtraSmall="@GridSize.Twelve">
                <Typography Variant="@entry.Key">@entry.Value</Typography>
            </Grid>
        }
    </Grid>
</div>

