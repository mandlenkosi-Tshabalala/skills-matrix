<Grid
    Container
    Spacing="@Spacing.Three">
    @foreach(var product in Products)
    {
        <Grid
            Item
            @key="@product.Id"
            Large="@GridSize.Four"
            Medium="@GridSize.Six"
            ExtraLarge="@GridSize.Twelve">
            <ProductCard Product="@product" />
        </Grid>
    }
</Grid>

@code
{
    [Parameter]
    public IEnumerable<Product> Products { set; get; }
}