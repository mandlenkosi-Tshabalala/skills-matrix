@attribute [Authorize]
@page "/employees"


@using System.ComponentModel.DataAnnotations
@using System.Text.Json
@inject IJSRuntime JSRuntime;

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Search Employees</h1>
    <p class="mb-4"></p>
</div>

