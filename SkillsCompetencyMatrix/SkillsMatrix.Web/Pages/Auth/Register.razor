@layout AuthLayout
@inherits RegisterBase
@page "/register"

<form class="login100-form validate-form" @onsubmit="@HandleValidSubmit">
    <span class="login100-form-title p-b-34">
        Account Registration
    </span>
    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type  email">
        <input id="first-name" class="input100" required @bind-value="Input.Email" type="email" name="email" placeholder="Email">
        <span class="focus-input100"></span>
    </div>
    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type password">
        <input class="input100" required type="password" @bind-value="Input.Password" name="pass" placeholder="Password">
        <span class="focus-input100"></span>
    </div>
    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type password">
        <input class="input100" required type="password" @bind-value="Input.ConfirmPassword" name="pass" placeholder="ConfirmPassword">
        <span class="focus-input100"></span>
    </div>
    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            Register
        </button>
    </div>
</form>

