    <div class="authentication-controls">
        <InputText id="first-name" class="form-control" required @bind-Value="userLoginDetails.Email" type="email" name="email" placeholder="Email" />
        <span class="focus-input100"></span>
        <ValidationMessage For="@(() => userLoginDetails.Email)" />
    </div>

    <div class="authentication-controls">

        <InputText class="form-control" required type="password" @bind-Value="userLoginDetails.Password" name="pass" placeholder="Password" />
        <span class="focus-input100"></span>
        <ValidationMessage For="@(() => userLoginDetails.Password)" />
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            Sign in
        </button>
    </div>
    <div class="w-full text-center p-t-27 p-b-239">
        <span class="txt1">
            Forgot
        </span>
        <a href="/forgotPassword" class="txt2">
            User name / password?
        </a>
        <br />
        <br />
        <a href="/register" class="txt3">
            Sign Up
        </a>
    </div>

</EditForm>


<BlazoredToasts Position="ToastPosition.TopRight"
                Timeout="5"
                IconType="IconType.FontAwesome"
                SuccessClass="success-toast-override"
                SuccessIcon="fa fa-thumbs-up"
                ErrorIcon="fa fa-bug">

