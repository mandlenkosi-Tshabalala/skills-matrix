@layout AuthLayout
@inherits ForgotPasswordBase
@page "/forgotPassword"


<form class="login100-form validate-form" @onsubmit="HandleForgotPassword">
    <span class="login100-form-title p-b-34">
        Password change
    </span>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type  email">
        <input id="first-name" class="input100" required @bind-value="userLoginDetails.Email" type="email" name="email" placeholder="Email">
        <span class="focus-input100"></span>
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            Send Email
        </button>
    </div>
</form>

