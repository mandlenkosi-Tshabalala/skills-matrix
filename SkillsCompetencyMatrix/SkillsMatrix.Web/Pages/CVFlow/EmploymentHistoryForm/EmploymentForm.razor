@attribute [Authorize]
@page "/personEmpolyment/{PersonId}"
@inherits EmployementFormBase

@using System.ComponentModel.DataAnnotations
@using System.Text.Json
@inject IJSRuntime JSRuntime;

<div class="card m-3">
    <div class="card-header" style="background-color:white">
        <div class="mdl-card__supporting-text">

            <div class="mdl-stepper-horizontal-alternative">
                <div class="mdl-stepper-step step-done active-step">
                    <div class="mdl-stepper-circle"><span>1</span></div>
                    <div class="mdl-stepper-title">Personal Details</div>
                    <div class="mdl-stepper-bar-left"></div>
                    <div class="mdl-stepper-bar-right"></div>
                </div>
                <div class="mdl-stepper-step step-done active-step">
                    <div class="mdl-stepper-circle"><span>2</span></div>
                    <div class="mdl-stepper-title">Address</div>
                    <div class="mdl-stepper-bar-left"></div>
                    <div class="mdl-stepper-bar-right"></div>
                </div>
                <div class="mdl-stepper-step step-done active-step">
                    <div class="mdl-stepper-circle"><span>3</span></div>
                    <div class="mdl-stepper-title">Education</div>
                    <div class="mdl-stepper-bar-left"></div>
                    <div class="mdl-stepper-bar-right"></div>
                </div>
                <div class="mdl-stepper-step active-step">
                    <div class="mdl-stepper-circle"><span>4</span></div>
                    <div class="mdl-stepper-title">Employment History</div>
                    <div class="mdl-stepper-bar-left"></div>
                    <div class="mdl-stepper-bar-right"></div>
                </div>
                <div class="mdl-stepper-step">
                    <div class="mdl-stepper-circle"><span>5</span></div>
                    <div class="mdl-stepper-title">Expertise</div>
                    <div class="mdl-stepper-bar-left"></div>
                    <div class="mdl-stepper-bar-right"></div>
                </div>
                <div class="mdl-stepper-step">
                    <div class="mdl-stepper-circle"><span>6</span></div>
                    <div class="mdl-stepper-title">Competencies</div>
                    <div class="mdl-stepper-bar-left"></div>
                    <div class="mdl-stepper-bar-right"></div>
                </div>
                <div class="mdl-stepper-step">
                    <div class="mdl-stepper-circle"><span>7</span></div>
                    <div class="mdl-stepper-title">Professinal Membership</div>
                    <div class="mdl-stepper-bar-left"></div>
                    <div class="mdl-stepper-bar-right"></div>
                </div>
                <div class="mdl-stepper-step">
                    <div class="mdl-stepper-circle"><span>8</span></div>
                    <div class="mdl-stepper-title">Skills</div>
                    <div class="mdl-stepper-bar-left"></div>
                    <div class="mdl-stepper-bar-right"></div>
                </div>
            </div>

        </div>
    </div>
    <div class="card-body">
        <EditForm EditContext="@editContext" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <div class="form-row">
                <div class="form-group col">
                    <label>Company Name</label>
                    <InputText @bind-Value="EmploymentHistory.CompanyName" class="form-control" />
                    <ValidationMessage For="@(() => EmploymentHistory.CompanyName)" />
                </div>
                <div class="form-group col">
                    <label>Role</label>
                    <InputText @bind-Value="EmploymentHistory.Role" class="form-control" />
                    <ValidationMessage For="@(() => EmploymentHistory.Role)" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    <label> Start Date</label>
                    <InputDate @bind-Value="EmploymentHistory.StartDate" class="form-control" />
                    <ValidationMessage For="@(() => EmploymentHistory.StartDate)" />
                </div>
                <div class="form-group col">
                    <label>End Date</label>
                    <InputDate @bind-Value="EmploymentHistory.EndDate" class="form-control" />
                    <ValidationMessage For="@(() => EmploymentHistory.EndDate)" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    <label>Qualification Level</label>
                    <InputSelect @bind-Value="EmploymentHistory.Country" class="form-control">
                        <option value=""></option>
                        <option value="option1">option1</option>
                        <option value="option2">option2</option>
                        <option value="option3">option3</option>
                        <option value="option4">option4</option>
                    </InputSelect>
                    <ValidationMessage For="@(() => EmploymentHistory.Country)" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    <label>Qualification Level</label>
                    <InputTextArea @bind-Value="EmploymentHistory.RoleDescription" class="form-control">
                    </InputTextArea>
                    <ValidationMessage For="@(() => EmploymentHistory.RoleDescription)" />
                </div>
            </div>
        </EditForm>
    </div>
    <div class="card-footer" style="background-color:white">
        <div>
            <button @onclick="@Back" class="btn btn-primary mr-1">Back</button>
            <button @onclick="@HandleValidSubmit" class="btn btn-primary mr-1">Next</button>
        </div>
    </div>
</div>


